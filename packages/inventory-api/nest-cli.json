{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/@root/src",
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "apps/@root/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/@root",
  "projects": {
    "@root": {
      "type": "application",
      "root": "apps/@root",
      "entryFile": "main",
      "sourceRoot": "apps/@root/src",
      "compilerOptions": {
        "tsConfigPath": "apps/@root/tsconfig.app.json"
      }
    },
    "guides": {
      "type": "application",
      "root": "apps/guides",
      "entryFile": "main",
      "sourceRoot": "apps/guides/src",
      "compilerOptions": {
        "tsConfigPath": "apps/guides/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "auth": {
      "type": "library",
      "root": "libs/auth",
      "entryFile": "index",
      "sourceRoot": "libs/auth/src",
      "compilerOptions": {
        "tsConfigPath": "libs/auth/tsconfig.lib.json"
      }
    }
  }
}